#!/usr/bin/env ruby

$: << File.expand_path(File.dirname(__FILE__) + "/../lib")

require 'tic_tac_toe/board'
require 'tic_tac_toe/player'
require 'tic_tac_toe/command_line_io'
require 'tic_tac_toe/ai'
require 'tic_tac_toe/command_line_runner'

board = TicTacToe::Board.new
human_player = TicTacToe::Player.new(TicTacToe::CommandLineIO, :X)
computer_player = TicTacToe::Player.new(TicTacToe::AI, :O)
players = [human_player, computer_player]

runner = TicTacToe::CommandLineRunner.new(board, players)
runner.run
